<!-- res/layout/activity_correct_answer.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="#13106D"
        app:cardCornerRadius="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moj_bialy"
                android:text="Brawo, poprawna odpowiedź!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textViewCurrentWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="	#008000"
                android:text="Wygrałeś: 0 zł"
                android:textStyle="bold"
                android:textSize="28sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textViewNextWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moj_bialy_bardziej_ciemny"
                android:text="Następne pytanie o: 500 zł"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <Button
            android:id="@+id/btnContinue"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Następne pytanie"
            android:onClick="btnContinueClicked"
            android:textColor="@color/moj_bialy"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
