<!-- res/layout/activity_koniec_gry.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        app:cardBackgroundColor="#13106D"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moj_bialy"
                android:text="Koniec gry!"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textWygrana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008000"
                android:text="Wygrana: 0 zł"
                android:textStyle="bold"
                android:textSize="28sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        <Button
            android:id="@+id/btnNowaGra"
            android:onClick="btnNowaGraClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rozpocznij nową grę"
            android:textColor="@color/moj_bialy"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnOknoMenuClicked"
            android:text="Okno menu"
            android:textColor="@color/moj_bialy" />
        <Button
            android:id="@+id/buttonSaveScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz wynik"
            android:textColor="@color/moj_bialy"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</LinearLayout>